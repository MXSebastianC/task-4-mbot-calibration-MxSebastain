// generated by mBlock5 for mBot Ranger
// codes make you happy

#include <Arduino.h>
#include <Wire.h>
#include <SoftwareSerial.h>
#include <MeAuriga.h>

MeRGBLed rgbled_0(0, 12);
MeBuzzer buzzer;
MeEncoderOnBoard Encoder_1(SLOT1);
MeEncoderOnBoard Encoder_2(SLOT2);
MeLightSensor lightsensor_12(12);

float mvmt = 0;

void isr_process_encoder1(void)
{
  if(digitalRead(Encoder_1.getPortB()) == 0){
    Encoder_1.pulsePosMinus();
  }else{
    Encoder_1.pulsePosPlus();
  }
}
void isr_process_encoder2(void)
{
  if(digitalRead(Encoder_2.getPortB()) == 0){
    Encoder_2.pulsePosMinus();
  }else{
    Encoder_2.pulsePosPlus();
  }
}
void move(int direction, int speed)
{
  int leftSpeed = 0;
  int rightSpeed = 0;
  if(direction == 1){
    leftSpeed = -speed;
    rightSpeed = speed;
  }else if(direction == 2){
    leftSpeed = speed;
    rightSpeed = -speed;
  }else if(direction == 3){
    leftSpeed = -speed;
    rightSpeed = -speed;
  }else if(direction == 4){
    leftSpeed = speed;
    rightSpeed = speed;
  }
  Encoder_1.setTarPWM(leftSpeed);
  Encoder_2.setTarPWM(rightSpeed);
}

void _delay(float seconds) {
  if(seconds < 0.0){
    seconds = 0.0;
  }
  long endTime = millis() + seconds * 1000;
  while(millis() < endTime) _loop();
}

void setup() {
  rgbled_0.setpin(44);
  rgbled_0.fillPixelsBak(0, 2, 1);
  buzzer.setpin(45);
  TCCR1A = _BV(WGM10);
  TCCR1B = _BV(CS11) | _BV(WGM12);
  TCCR2A = _BV(WGM21) | _BV(WGM20);
  TCCR2B = _BV(CS21);
  attachInterrupt(Encoder_1.getIntNum(), isr_process_encoder1, RISING);
  attachInterrupt(Encoder_2.getIntNum(), isr_process_encoder2, RISING);
  randomSeed((unsigned long)(lightsensor_12.read() * 123456));
  _delay(1);

  rgbled_0.setColor(1,218,0,155);
  rgbled_0.show();

  buzzer.tone(165, 1 * 1000);
  _delay(0.02);

  rgbled_0.setColor(2,255,20,188);
  rgbled_0.show();

  buzzer.tone(196, 1 * 1000);
  _delay(0.02);

  rgbled_0.setColor(3,136,18,255);
  rgbled_0.show();

  buzzer.tone(262, 1 * 1000);
  _delay(0.02);

  rgbled_0.setColor(4,218,0,155);
  rgbled_0.show();

  buzzer.tone(165, 1 * 1000);
  _delay(0.02);

  rgbled_0.setColor(5,255,20,188);
  rgbled_0.show();

  buzzer.tone(196, 1 * 1000);
  _delay(0.02);

  rgbled_0.setColor(6,136,18,255);
  rgbled_0.show();

  buzzer.tone(262, 1 * 1000);
  _delay(0.02);

  rgbled_0.setColor(7,218,0,155);
  rgbled_0.show();

  buzzer.tone(523, 1 * 1000);
  _delay(0.02);

  rgbled_0.setColor(8,255,20,188);
  rgbled_0.show();

  buzzer.tone(392, 1 * 1000);
  _delay(0.02);

  rgbled_0.setColor(9,136,18,255);
  rgbled_0.show();

  buzzer.tone(330, 1 * 1000);
  _delay(0.02);

  rgbled_0.setColor(10,218,0,155);
  rgbled_0.show();

  buzzer.tone(165, 1 * 1000);
  _delay(0.02);

  rgbled_0.setColor(11,255,20,188);
  rgbled_0.show();

  buzzer.tone(196, 1 * 1000);
  _delay(0.02);

  rgbled_0.setColor(12,136,18,255);
  rgbled_0.show();

  buzzer.tone(262, 1 * 1000);
  _delay(0.02);
  while(!(random(1, 10 +1) == 10.000000))
  {
    _loop();
  }
  for(int count=0;count<5;count++){

      rgbled_0.setColor(0,255,0,0);
      rgbled_0.show();

      buzzer.tone(880, 0.75 * 1000);
      _delay(0.02);
  }
  if(random(1, 5 +1) == 5.000000){

      move(1, 50 / 100.0 * 255);
      _delay(10);
      move(1, 0);

      Encoder_1.setTarPWM(-1 * 50/100.0*255);
      Encoder_2.setTarPWM(60/100.0*255);
      Encoder_1.setTarPWM(0);
      Encoder_2.setTarPWM(0);
      _delay(0.5);

  }else{

      rgbled_0.setColor(0,255,246,8);
      rgbled_0.show();

  }
  while(!(random(1, 5 +1) == 5.000000))
  {
    _loop();

    rgbled_0.setColor(0,255,246,8);
    rgbled_0.show();

  }

  rgbled_0.setColor(0,0,175,26);
  rgbled_0.show();

  move(1, 50 / 100.0 * 255);
  _delay(10);
  move(1, 0);

  Encoder_1.setTarPWM(-1 * 50/100.0*255);
  Encoder_2.setTarPWM(60/100.0*255);
  Encoder_1.setTarPWM(0);
  Encoder_2.setTarPWM(0);
  _delay(0.5);

}

void _loop() {
  Encoder_1.loop();
  Encoder_2.loop();
}

void loop() {
  _loop();
}
The final sequence is suposed to emulate the start up sequence of a F1 race, in which it takes a randome amount of time for the light to change from yello (wait) to green (go) for suspense
